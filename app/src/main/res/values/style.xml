<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/BackgroundDefaultLight</item>
        <item name="colorPrimary">@color/BackgroundDefaultLight</item>
        <item name="colorAccent">@color/AccentLight</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/BackgroundDefaultLight</item>
    </style>

    <style name="OctetEditTextTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/TextPrimaryLight</item>
        <item name="colorControlHighlight">@color/TextPrimaryLight</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="IpInfoTitleTheme">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/AccentSecondaryLight</item>
    </style>

    <style name="IpInfoValueTheme">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/TextPrimaryLight</item>
    </style>
</resources>